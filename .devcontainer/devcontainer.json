{
  "name": "Project X (DevContainer)",
  "dockerComposeFile": [
    "../docker-compose.yml"
  ],
  "service": "gpu",
  "workspaceFolder": "/app",
  "overrideCommand": true, // критично, чтобы не исполнялась оригинальная command
  "shutdownAction": "stopCompose",
  "forwardPorts": [
    8888
  ],
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-toolsai.jupyter",
        "charliermarsh.ruff",
        "ms-vscode.makefile-tools"
      ],
      "settings": {
        "python.defaultInterpreterPath": "/usr/local/bin/python",
        "editor.rulers": [
          88
        ],
        "editor.formatOnSave": true,
        "python.formatting.provider": "black"
      }
    }
  },
  "postCreateCommand": "pip install -U pip && if [ -f requirements.txt ]; then pip install -r requirements.txt; fi && if [ -f requirements-dev.txt ]; then pip install -r requirements-dev.txt; fi && pre-commit install || true"
}